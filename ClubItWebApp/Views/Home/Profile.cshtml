<link href="~/css/RachelCSS.css" rel="stylesheet" type="text/css" />
<body>
	<header>
		<h2>My Profile</h2>
	</header>
	<br>
	<div class="container">
		<form action=>
			<div class="row">
				<div class="col-25">
					<label for="user_first_name">First Name</label>
				</div>
				<div class="col-75">
					<input type="text" id="user_first_name" name="user_first_name" value="user_first_name" readonly>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-25">
					<label for="user_last_name">Last Name</label>
				</div>
				<div class="col-75">
					<input type="text" id="user_last_name" name="user_last_name" value="user_last_name" readonly>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-25">
					<label for="user_email">Email</label>
				</div>
				<div class="col-75">
					<input type="text" id="user_email" name="user_email" value="user_email" readonly>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-25">
					<label for="user_interests">Hobbies and Interests</label>
				</div>
				<div class="col-75">
					<textarea id="user_interests" name="user_interests" style="height:200px" readonly>user_interests</textarea>
				</div>
			</div>
		</form>
		<h3>My Clubs</h3>
		<table>
			<tr>
				<th>Club Name</th>
				<th>Date Joined</th>
			</tr>
			<tr>
				<td>club_name</td>
				<td>join_date</td>
			</tr>
		</table>
		<section>
			<button type="button">View More Clubs</button>
		</section>
	</div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}