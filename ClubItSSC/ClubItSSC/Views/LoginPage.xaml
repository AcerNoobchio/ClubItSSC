<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClubItSSC.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout x:Name="MasterLayout">

            <StackLayout x:Name="MainHeader" VerticalOptions="FillAndExpand">
                <Label x:Name="Lbl_Header" HorizontalOptions="Center" Text="Welcome to ClubIt!" Font="Bold" FontSize="Small"/>
                <Image x:Name="LoginIcon" Source="ETSU_Logo.jpg" Aspect="AspectFit" Margin="0,30,0,0"/>
            </StackLayout>

            <StackLayout x:Name="LoginLayout">
                <StackLayout.Padding>
                    <OnPlatform x:TypeArguments="Thickness"
                        Android="0, 30, 0, 0">
                    </OnPlatform>
                </StackLayout.Padding>

                <ActivityIndicator x:Name="ActivitySpinner" Color="White" IsRunning="True"/>

                <Label x:Name="Lbl_Header2" Text="Login:"/>

                <Label x:Name="Lbl_Username" Text="Username"/>
                <Entry x:Name="Entry_Username" Placeholder=""/>

                <Label x:Name="Lbl_Password" Text="Password"/>
                <Entry x:Name="Entry_Password" Placeholder=""/>

                <Button x:Name="Btn_Login" Text="Log In" Clicked="LoginProcedure"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>